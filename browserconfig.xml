<?xml version="1.0" encoding="utf-8"?>
<browserconfig>
    <msapplication>
        <tile>
            <square70x70logo src="icons/icon-70x70.png"/>
            <square150x150logo src="icons/icon-150x150.png"/>
            <square310x310logo src="icons/icon-310x310.png"/>
            <wide310x150logo src="icons/icon-310x150.png"/>
            <TileColor>#4a6fa5</TileColor>
            <TileImage src="icons/icon-144x144.png"/>
        </tile>
        <notification>
            <polling-uri src="notifications/feed.xml"/>
            <frequency>30</frequency>
            <cycle>1</cycle>
        </notification>
        <badge>
            <polling-uri src="notifications/badge.xml"/>
        </badge>
    </msapplication>
</browserconfig> 